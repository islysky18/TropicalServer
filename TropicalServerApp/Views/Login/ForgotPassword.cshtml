
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot UserId</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/TropicalStyles/ForgetPassword.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/Content/TropicalStyles/Login.css">


</head>

<body>

    <div class="container">

        <div class="main">

            <div class="imageDisplay">
                <img height="100" src="@Url.Content("~/Images/Header.jpg")" />
            </div>

            <div class="form-container">
                <form action="#" method="POST" class="form-wrap">
                    <h2>Forgot Password</h2>
                    <div class="form-box">
                        <input type="text" placeholder="UserID" />
                        <input type="text" placeholder="UserEmail" />
                    </div>
                    <div class="form-submit">
                        <input type="submit" value="Send" />
                    </div>
                </form>
            </div>


            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>

    </div>





    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>

</html>